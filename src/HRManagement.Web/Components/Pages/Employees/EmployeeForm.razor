@page "/employees/create"
@page "/employees/edit/{EmployeeId:long}"
@using HRManagement.Models.DTOs
@using HRManagement.Services.Interfaces
@inject IEmployeeService EmployeeService
@inject NavigationManager NavigationManager

<PageTitle>@(EmployeeId == 0 ? "Create Employee" : "Edit Employee")</PageTitle>

<div class="container mt-4">
    <h2>@(EmployeeId == 0 ? "Create New Employee" : "Edit Employee")</h2>

    @if (error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @error
        </div>
    }

    @if (loading)
    {
        <div class="alert alert-info">Loading...</div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <form @onsubmit="HandleSubmit">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="empCode" class="form-label">Employee Code *</label>
                                <input type="text" class="form-control" id="empCode"
                                       @bind="model.EmployeeCode" placeholder="e.g., EMP001" disabled="@(EmployeeId != 0)" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="hireDate" class="form-label">Hire Date *</label>
                                <input type="date" class="form-control" id="hireDate" @bind="model.HireDate" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="firstName" class="form-label">First Name *</label>
                                <input type="text" class="form-control" id="firstName"
                                       @bind="model.FirstName" placeholder="John" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="lastName" class="form-label">Last Name *</label>
                                <input type="text" class="form-control" id="lastName"
                                       @bind="model.LastName" placeholder="Doe" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="middleName" class="form-label">Middle Name</label>
                                <input type="text" class="form-control" id="middleName"
                                       @bind="model.MiddleName" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email *</label>
                                <input type="email" class="form-control" id="email"
                                       @bind="model.EmailOfficial" placeholder="john@company.com" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone</label>
                                <input type="tel" class="form-control" id="phone"
                                       @bind="model.PhonePrimary" placeholder="+1-555-0000" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="department" class="form-label">Department *</label>
                                <input type="number" class="form-control" id="department"
                                       @bind="model.DepartmentId" placeholder="1" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="jobTitle" class="form-label">Job Title</label>
                                <input type="number" class="form-control" id="jobTitle"
                                       @bind="model.JobTitleId" placeholder="1" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="empType" class="form-label">Employment Type</label>
                                <select class="form-control" id="empType" @bind="model.EmploymentType">
                                    <option value="Full-time">Full-time</option>
                                    <option value="Part-time">Part-time</option>
                                    <option value="Contract">Contract</option>
                                    <option value="Temporary">Temporary</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="salary" class="form-label">Salary</label>
                                <input type="number" class="form-control" id="salary"
                                       @bind="model.Salary" step="0.01" placeholder="0.00" />
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="address" class="form-label">Address</label>
                        <input type="text" class="form-control" id="address"
                               @bind="model.CurrentAddress" placeholder="123 Main St" />
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary me-2" disabled="@submitting">
                            @(submitting ? "Saving..." : "Save")
                        </button>
                        <a href="/employees" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public long EmployeeId { get; set; }

    private CreateEmployeeRequest model = new();
    private bool loading = false;
    private bool submitting = false;
    private string? error;
    private const long OrganizationId = 1; // In production, get from auth/context

    protected override async Task OnInitializedAsync()
    {
        if (EmployeeId != 0)
        {
            try
            {
                loading = true;
                var emp = await EmployeeService.GetByIdAsync(EmployeeId);
                if (emp != null)
                {
                    model = new CreateEmployeeRequest
                    {
                        OrganizationId = emp.OrganizationId,
                        EmployeeCode = emp.EmployeeCode,
                        FirstName = emp.FirstName,
                        LastName = emp.LastName,
                        MiddleName = emp.MiddleName,
                        EmailOfficial = emp.EmailOfficial,
                        EmailPersonal = emp.EmailPersonal,
                        PhonePrimary = emp.PhonePrimary,
                        DepartmentId = emp.DepartmentId,
                        JobTitleId = emp.JobTitleId,
                        EmploymentType = emp.EmploymentType,
                        HireDate = emp.HireDate,
                        Salary = emp.Salary,
                        CurrentAddress = emp.CurrentAddress
                    };
                }
            }
            finally
            {
                loading = false;
            }
        }
        else
        {
            model.OrganizationId = OrganizationId;
            model.HireDate = DateTime.Today;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            submitting = true;
            error = null;

            if (EmployeeId == 0)
            {
                await EmployeeService.CreateAsync(model);
            }
            else
            {
                var updateModel = new UpdateEmployeeRequest
                {
                    FirstName = model.FirstName,
                    LastName = model.LastName,
                    MiddleName = model.MiddleName,
                    EmailOfficial = model.EmailOfficial,
                    EmailPersonal = model.EmailPersonal,
                    PhonePrimary = model.PhonePrimary,
                    DepartmentId = model.DepartmentId,
                    JobTitleId = model.JobTitleId,
                    EmploymentType = model.EmploymentType,
                    Salary = model.Salary,
                    CurrentAddress = model.CurrentAddress
                };
                await EmployeeService.UpdateAsync(EmployeeId, updateModel);
            }

            NavigationManager.NavigateTo("/employees");
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            submitting = false;
        }
    }
}
