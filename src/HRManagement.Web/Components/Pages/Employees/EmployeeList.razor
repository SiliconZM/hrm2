@page "/employees"
@using HRManagement.Models.DTOs
@using HRManagement.Services.Interfaces
@inject IEmployeeService EmployeeService
@inject NavigationManager NavigationManager

<PageTitle>Employee Management</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Employee Directory</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="/employees/create" class="btn btn-primary">
                <span class="oi oi-plus"></span> Add Employee
            </a>
        </div>
    </div>

    @if (loading)
    {
        <div class="alert alert-info">Loading employees...</div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @error
        </div>
    }
    else if (employees != null && employees.Items.Any())
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Employee Code</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Job Title</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in employees.Items)
                        {
                            <tr>
                                <td><strong>@emp.EmployeeCode</strong></td>
                                <td>@emp.FullName</td>
                                <td>@emp.EmailOfficial</td>
                                <td>@emp.DepartmentName</td>
                                <td>@emp.JobTitleName</td>
                                <td>
                                    <span class="badge" style="background-color: @GetStatusColor(emp.EmploymentStatus)">
                                        @emp.EmploymentStatus
                                    </span>
                                </td>
                                <td>
                                    <a href="/employees/@emp.EmployeeId" class="btn btn-sm btn-info">View</a>
                                    <a href="/employees/edit/@emp.EmployeeId" class="btn btn-sm btn-warning">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination">
                        @if (employees.HasPreviousPage)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="() => LoadPage(employees.PageNumber - 1)">
                                    Previous
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Previous</span>
                            </li>
                        }

                        <li class="page-item active">
                            <span class="page-link">
                                Page @employees.PageNumber of @employees.TotalPages
                            </span>
                        </li>

                        @if (employees.HasNextPage)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="() => LoadPage(employees.PageNumber + 1)">
                                    Next
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Next</span>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No employees found.</div>
    }
</div>

@code {
    private PagedResponse<EmployeeDto>? employees;
    private bool loading = true;
    private string? error;
    private int currentPage = 1;
    private const long OrganizationId = 1; // In production, get from auth/context

    protected override async Task OnInitializedAsync()
    {
        await LoadPage(1);
    }

    private async Task LoadPage(int pageNumber)
    {
        try
        {
            loading = true;
            error = null;
            employees = await EmployeeService.GetAllAsync(OrganizationId, pageNumber, 10);
            currentPage = pageNumber;
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private string GetStatusColor(string status)
    {
        return status switch
        {
            "Active" => "#28a745",
            "Inactive" => "#6c757d",
            "On Leave" => "#ffc107",
            "Terminated" => "#dc3545",
            _ => "#17a2b8"
        };
    }
}
