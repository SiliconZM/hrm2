@page "/dashboard"
@using HRManagement.Services.Interfaces

<PageTitle>HR Management Dashboard</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-5">
        <div class="col-12">
            <h1>HR Management System</h1>
            <p class="text-muted">Comprehensive human resource management solution</p>
        </div>
    </div>

    <div class="row">
        <!-- Core HR Module -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <span class="oi oi-person"></span> Employee Management
                    </h5>
                    <p class="card-text text-muted">Manage employee records, departments, and organizational structure</p>
                </div>
                <div class="card-footer bg-white">
                    <a href="/employees" class="btn btn-sm btn-primary">View Employees</a>
                </div>
            </div>
        </div>

        <!-- Recruitment Module -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <span class="oi oi-briefcase"></span> Recruitment
                    </h5>
                    <p class="card-text text-muted">Post jobs, manage candidates, and track applications</p>
                </div>
                <div class="card-footer bg-white">
                    <div class="btn-group" role="group">
                        <a href="/recruitment/job-postings" class="btn btn-sm btn-primary">Job Postings</a>
                        <a href="/recruitment/candidates" class="btn btn-sm btn-primary">Candidates</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Performance Module -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <span class="oi oi-chart"></span> Performance Management
                    </h5>
                    <p class="card-text text-muted">Conduct evaluations and track employee goals and objectives</p>
                </div>
                <div class="card-footer bg-white">
                    <a href="/performance/evaluations" class="btn btn-sm btn-primary">Evaluations</a>
                </div>
            </div>
        </div>

        <!-- Skills Module -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <span class="oi oi-puzzle-piece"></span> Skills & Competencies
                    </h5>
                    <p class="card-text text-muted">Maintain skill inventory and track employee competencies</p>
                </div>
                <div class="card-footer bg-white">
                    <a href="/skills/skills-list" class="btn btn-sm btn-primary">Skills</a>
                </div>
            </div>
        </div>

        <!-- Contracts Module -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <span class="oi oi-document"></span> Contracts
                    </h5>
                    <p class="card-text text-muted">Manage employment contracts and agreements</p>
                </div>
                <div class="card-footer bg-white">
                    <a href="/contracts/contracts-list" class="btn btn-sm btn-primary">Contracts</a>
                </div>
            </div>
        </div>

        <!-- Leave Management Module -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <span class="oi oi-calendar"></span> Leave Management
                    </h5>
                    <p class="card-text text-muted">Manage leave requests, balances, and attendance</p>
                </div>
                <div class="card-footer bg-white">
                    <a href="/leave/requests" class="btn btn-sm btn-primary">Leave Requests</a>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5" />

    <!-- System Status Section -->
    <div class="row">
        <div class="col-12">
            <h4>System Overview</h4>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h6 class="card-title">Employees</h6>
                    <p class="card-text" style="font-size: 1.5rem;">Loading...</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h6 class="card-title">Active Vacancies</h6>
                    <p class="card-text" style="font-size: 1.5rem;">Loading...</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h6 class="card-title">Pending Reviews</h6>
                    <p class="card-text" style="font-size: 1.5rem;">Loading...</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h6 class="card-title">Expiring Contracts</h6>
                    <p class="card-text" style="font-size: 1.5rem;">Loading...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.2) !important;
    }
</style>

