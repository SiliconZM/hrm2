@page "/payroll/salary-structures/{StructureId:long}/components"
@using HRManagement.Models.DTOs
@using HRManagement.Services.Interfaces
@inject IPayrollService PayrollService
@inject NavigationManager NavigationManager

<PageTitle>Salary Components</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Salary Components</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="@($"/payroll/salary-structures/{StructureId}/components/create")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Component
            </a>
            <a href="/payroll/salary-structures" class="btn btn-secondary">
                Back to Structures
            </a>
        </div>
    </div>

    @if (error != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error:</strong> @error
            <button type="button" class="btn-close" @onclick="@(() => error = null)"></button>
        </div>
    }

    @if (loading)
    {
        <div class="alert alert-info">
            <span class="spinner-border spinner-border-sm me-2"></span>
            Loading components...
        </div>
    }
    else if (components == null || components.Count == 0)
    {
        <div class="alert alert-warning">
            No components found for this salary structure. <a href="@($"/payroll/salary-structures/{StructureId}/components/create")">Add one now</a>.
        </div>
    }
    else
    {
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 10%;">Order</th>
                            <th style="width: 25%;">Component Name</th>
                            <th style="width: 15%;">Type</th>
                            <th style="width: 15%;">Amount/Percentage</th>
                            <th style="width: 10%;">Status</th>
                            <th style="width: 25%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var component in components.OrderBy(c => c.DisplayOrder))
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-secondary">@component.DisplayOrder</span>
                                </td>
                                <td>
                                    <strong>@component.ComponentName</strong>
                                </td>
                                <td>
                                    @if (component.ComponentType == "Earning")
                                    {
                                        <span class="badge bg-success">Earning</span>
                                    }
                                    else if (component.ComponentType == "Deduction")
                                    {
                                        <span class="badge bg-warning">Deduction</span>
                                    }
                                    else if (component.ComponentType == "Tax")
                                    {
                                        <span class="badge bg-danger">Tax</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">@component.ComponentType</span>
                                    }
                                </td>
                                <td>
                                    @if (component.IsPercentageBased && component.Percentage.HasValue)
                                    {
                                        <span>@component.Percentage.Value.ToString("F2")%</span>
                                    }
                                    else if (component.Amount > 0)
                                    {
                                        <span>@component.Amount.ToString("C2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (component.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    @if (confirmDeleteId == component.SalaryComponentId)
                                    {
                                        <button @onclick="@(() => ConfirmDelete(component.SalaryComponentId))"
                                                class="btn btn-sm btn-danger me-1"
                                                disabled="@(deleting == component.SalaryComponentId)">
                                            @if (deleting == component.SalaryComponentId)
                                            {
                                                <span class="spinner-border spinner-border-sm me-1"></span>
                                            }
                                            Confirm
                                        </button>
                                        <button @onclick="CancelDelete"
                                                class="btn btn-sm btn-secondary"
                                                disabled="@(deleting == component.SalaryComponentId)">
                                            Cancel
                                        </button>
                                    }
                                    else
                                    {
                                        <a href="@($"/payroll/salary-structures/{StructureId}/components/edit/{component.SalaryComponentId}")"
                                           class="btn btn-sm btn-warning me-1">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <button @onclick="@(() => InitiateDelete(component.SalaryComponentId))"
                                                class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public long StructureId { get; set; }

    private List<SalaryComponentDto>? components;
    private bool loading = false;
    private string? error;
    private long deleting = 0;
    private long confirmDeleteId = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadComponents();
    }

    private async Task LoadComponents()
    {
        try
        {
            loading = true;
            error = null;
            components = await PayrollService.GetComponentsByStructureAsync(StructureId);
        }
        catch (Exception)
        {
            error = "Failed to load components";
            components = new List<SalaryComponentDto>();
        }
        finally
        {
            loading = false;
        }
    }

    private void InitiateDelete(long componentId)
    {
        confirmDeleteId = componentId;
    }

    private void CancelDelete()
    {
        confirmDeleteId = 0;
    }

    private async Task ConfirmDelete(long componentId)
    {
        try
        {
            deleting = componentId;
            await PayrollService.DeleteSalaryComponentAsync(componentId);
            confirmDeleteId = 0;
            await LoadComponents();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            deleting = 0;
        }
    }
}
