@page "/payroll/payroll-runs"
@using HRManagement.Models.DTOs
@using HRManagement.Services.Interfaces
@inject IPayrollService PayrollService
@inject NavigationManager NavigationManager

<PageTitle>Payroll Runs</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Payroll Runs</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="/payroll/payroll-runs/create" class="btn btn-primary">
                <span class="oi oi-plus"></span> Create Payroll
            </a>
        </div>
    </div>

    @if (loading)
    {
        <div class="alert alert-info">Loading payroll runs...</div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @error
        </div>
    }
    else if (payrolls != null && payrolls.Items.Any())
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Payroll Name</th>
                            <th>Period</th>
                            <th>Employees</th>
                            <th>Total Gross</th>
                            <th>Total Net</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payroll in payrolls.Items)
                        {
                            <tr>
                                <td><strong>@payroll.PayrollName</strong></td>
                                <td>@payroll.StartDate.ToString("yyyy-MM-dd") to @payroll.EndDate.ToString("yyyy-MM-dd")</td>
                                <td><span class="badge bg-info">@payroll.EmployeeCount</span></td>
                                <td>@payroll.TotalGrossSalary.ToString("C")</td>
                                <td>@payroll.TotalNetSalary.ToString("C")</td>
                                <td>
                                    <span class="badge" style="background-color: @GetStatusColor(payroll.Status)">
                                        @payroll.Status
                                    </span>
                                </td>
                                <td>
                                    <a href="/payroll/payroll-runs/edit/@payroll.PayrollId" class="btn btn-sm btn-warning">Edit</a>
                                    <button class="btn btn-sm btn-danger" @onclick="() => DeletePayroll(payroll.PayrollId)">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination">
                        @if (payrolls.HasPreviousPage)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="() => LoadPage(payrolls.PageNumber - 1)">
                                    Previous
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Previous</span>
                            </li>
                        }

                        <li class="page-item active">
                            <span class="page-link">
                                Page @payrolls.PageNumber of @payrolls.TotalPages
                            </span>
                        </li>

                        @if (payrolls.HasNextPage)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="() => LoadPage(payrolls.PageNumber + 1)">
                                    Next
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Next</span>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No payroll runs found.</div>
    }
</div>

@code {
    private PagedResponse<PayrollDto>? payrolls;
    private bool loading = true;
    private string? error;
    private int currentPage = 1;
    private const long OrganizationId = 1; // In production, get from auth/context

    @inject IJSRuntime JSRuntime

    protected override async Task OnInitializedAsync()
    {
        await LoadPage(1);
    }

    private async Task LoadPage(int pageNumber)
    {
        try
        {
            loading = true;
            error = null;
            payrolls = await PayrollService.GetAllPayrollsAsync(OrganizationId, pageNumber, 10);
            currentPage = pageNumber;
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private async Task DeletePayroll(long payrollId)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this payroll run?"))
            return;

        try
        {
            await PayrollService.DeletePayrollAsync(payrollId);
            await LoadPage(currentPage);
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }

    private string GetStatusColor(string status)
    {
        return status switch
        {
            "Draft" => "#6c757d",
            "Processed" => "#0dcaf0",
            "Paid" => "#28a745",
            "Cancelled" => "#dc3545",
            _ => "#17a2b8"
        };
    }
}
