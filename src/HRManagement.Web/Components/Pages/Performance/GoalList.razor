@page "/performance/goals"
@using HRManagement.Models.DTOs
@using HRManagement.Services.Interfaces
@inject IPerformanceService PerformanceService
@inject NavigationManager NavigationManager

<PageTitle>Employee Goals</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Employee Goals</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="/performance/goals/create" class="btn btn-primary">
                <span class="oi oi-plus"></span> New Goal
            </a>
        </div>
    </div>

    @if (loading)
    {
        <div class="alert alert-info">Loading goals...</div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @error
        </div>
    }
    else if (goals != null && goals.Items.Any())
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Goal Title</th>
                            <th>Progress</th>
                            <th>Status</th>
                            <th>Target Date</th>
                            <th>Alignment</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var goal in goals.Items)
                        {
                            <tr>
                                <td><strong>@goal.GoalTitle</strong></td>
                                <td>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar" role="progressbar"
                                             style="width: @goal.ProgressPercentage%;"
                                             aria-valuenow="@goal.ProgressPercentage"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                            @goal.ProgressPercentage%
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge" style="background-color: @GetStatusColor(goal.Status)">
                                        @goal.Status
                                    </span>
                                </td>
                                <td>
                                    @if (goal.TargetDate.HasValue)
                                    {
                                        <small>@goal.TargetDate.Value.ToShortDateString()</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">N/A</small>
                                    }
                                </td>
                                <td>@(goal.Alignment ?? "N/A")</td>
                                <td>
                                    <a href="/performance/goals/@goal.GoalId" class="btn btn-sm btn-info">View</a>
                                    <a href="/performance/goals/edit/@goal.GoalId" class="btn btn-sm btn-warning">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination">
                        @if (goals.HasPreviousPage)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="() => LoadPage(goals.PageNumber - 1)">
                                    Previous
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Previous</span>
                            </li>
                        }

                        <li class="page-item">
                            <span class="page-link">Page @goals.PageNumber of @goals.TotalPages</span>
                        </li>

                        @if (goals.HasNextPage)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="() => LoadPage(goals.PageNumber + 1)">
                                    Next
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Next</span>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No goals found.</div>
    }
</div>

@code {
    private PagedResponse<GoalDto>? goals;
    private bool loading = true;
    private string? error;
    private const long OrganizationId = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadPage(1);
    }

    private async Task LoadPage(int pageNumber)
    {
        try
        {
            loading = true;
            error = null;
            goals = await PerformanceService.GetAllGoalsAsync(OrganizationId, pageNumber, 10);
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private string GetStatusColor(string status) => status switch
    {
        "Not Started" => "#6c757d",
        "In Progress" => "#17a2b8",
        "Completed" => "#28a745",
        "On Hold" => "#ffc107",
        "Cancelled" => "#dc3545",
        _ => "#6f42c1"
    };
}
