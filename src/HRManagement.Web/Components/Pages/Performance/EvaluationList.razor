@page "/performance/evaluations"
@using HRManagement.Models.DTOs
@using HRManagement.Services.Interfaces
@inject IPerformanceService PerformanceService
@inject NavigationManager NavigationManager

<PageTitle>Performance Evaluations</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Performance Evaluations</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="/performance/evaluations/create" class="btn btn-primary">
                <span class="oi oi-plus"></span> New Evaluation
            </a>
        </div>
    </div>

    @if (loading)
    {
        <div class="alert alert-info">Loading evaluations...</div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @error
        </div>
    }
    else if (evaluations != null && evaluations.Items.Any())
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Type</th>
                            <th>Rating</th>
                            <th>Status</th>
                            <th>Period</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var eval in evaluations.Items)
                        {
                            <tr>
                                <td><strong>@eval.EmployeeName</strong></td>
                                <td>@eval.EvaluationType</td>
                                <td>
                                    @if (eval.OverallRating.HasValue)
                                    {
                                        <span class="badge bg-warning">@eval.OverallRating.Value.ToString("0.0")/5</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not rated</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge" style="background-color: @GetStatusColor(eval.Status)">
                                        @eval.Status
                                    </span>
                                </td>
                                <td>
                                    @if (eval.StartDate.HasValue && eval.EndDate.HasValue)
                                    {
                                        <small>@eval.StartDate.Value.ToShortDateString() - @eval.EndDate.Value.ToShortDateString()</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Not specified</small>
                                    }
                                </td>
                                <td>
                                    <a href="/performance/evaluations/@eval.EvaluationId" class="btn btn-sm btn-info">View</a>
                                    <a href="/performance/evaluations/edit/@eval.EvaluationId" class="btn btn-sm btn-warning">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination">
                        @if (evaluations.HasPreviousPage)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="() => LoadPage(evaluations.PageNumber - 1)">
                                    Previous
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Previous</span>
                            </li>
                        }

                        <li class="page-item">
                            <span class="page-link">Page @evaluations.PageNumber of @evaluations.TotalPages</span>
                        </li>

                        @if (evaluations.HasNextPage)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="() => LoadPage(evaluations.PageNumber + 1)">
                                    Next
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Next</span>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No evaluations found.</div>
    }
</div>

@code {
    private PagedResponse<EvaluationDto>? evaluations;
    private bool loading = true;
    private string? error;
    private const long OrganizationId = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadPage(1);
    }

    private async Task LoadPage(int pageNumber)
    {
        try
        {
            loading = true;
            error = null;
            evaluations = await PerformanceService.GetAllEvaluationsAsync(OrganizationId, pageNumber, 10);
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private string GetStatusColor(string status) => status switch
    {
        "Draft" => "#ffc107",
        "Submitted" => "#17a2b8",
        "Approved" => "#28a745",
        "Acknowledged" => "#6c757d",
        _ => "#6f42c1"
    };
}
