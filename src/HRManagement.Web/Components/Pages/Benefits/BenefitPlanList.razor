@page "/benefits/benefit-plans"
@using HRManagement.Models.DTOs
@using HRManagement.Services.Interfaces
@attribute [StreamRendering(true)]
@inject IBenefitsService BenefitsService
@inject NavigationManager NavManager

<PageTitle>Benefit Plans</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6"><h2>Benefit Plans</h2></div>
        <div class="col-md-6 text-end">
            <a href="/benefits/benefit-plans/create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add Plan</a>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="alert alert-info">Loading...</div>
    }
    else if (benefitPlans?.Items.Count() == 0)
    {
        <div class="alert alert-warning">No benefit plans found.</div>
    }
    else if (benefitPlans != null)
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Plan Name</th>
                        <th>Type</th>
                        <th>Code</th>
                        <th>Employee Cost</th>
                        <th>Enrolled</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var plan in benefitPlans.Items)
                    {
                        <tr>
                            <td><strong>@plan.PlanName</strong></td>
                            <td>@plan.BenefitTypeName</td>
                            <td>@plan.PlanCode</td>
                            <td>@plan.EmployeeContribution.ToString("C")</td>
                            <td><span class="badge bg-secondary">@plan.EnrolledEmployees</span></td>
                            <td>@(plan.IsActive ? "Active" : "Inactive")</td>
                            <td>
                                <a href="/benefits/benefit-plans/edit/@plan.BenefitPlanId" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeletePlan(plan.BenefitPlanId)"><i class="bi bi-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private PagedResponse<BenefitPlanDto>? benefitPlans;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            benefitPlans = await BenefitsService.GetAllBenefitPlansAsync(1, 1, 10);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeletePlan(long planId)
    {
        try
        {
            await BenefitsService.DeleteBenefitPlanAsync(planId);
            await OnInitializedAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }
}
