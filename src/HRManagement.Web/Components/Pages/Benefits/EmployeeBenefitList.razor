@page "/benefits/employee-benefits"
@using HRManagement.Models.DTOs
@using HRManagement.Services.Interfaces
@attribute [StreamRendering(true)]
@inject IBenefitsService BenefitsService

<PageTitle>Employee Benefits</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6"><h2>Employee Benefits</h2></div>
        <div class="col-md-6 text-end">
            <a href="/benefits/employee-benefits/create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Enroll</a>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="alert alert-info">Loading...</div>
    }
    else if (employeeBenefits?.Items.Count() == 0)
    {
        <div class="alert alert-warning">No enrollments found.</div>
    }
    else if (employeeBenefits != null)
    {
        <div class="table-responsive">
            <table class="table table-hover table-sm">
                <thead class="table-light">
                    <tr>
                        <th>Employee</th>
                        <th>Benefit Type</th>
                        <th>Plan</th>
                        <th>Enrolled</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var benefit in employeeBenefits.Items)
                    {
                        <tr>
                            <td>@benefit.EmployeeName</td>
                            <td><span class="badge bg-info">@benefit.BenefitTypeName</span></td>
                            <td>@benefit.PlanName</td>
                            <td>@benefit.EnrolledDate.ToShortDateString()</td>
                            <td><span class="badge">@benefit.EnrollmentStatus</span></td>
                            <td>
                                <a href="/benefits/employee-benefits/edit/@benefit.EmployeeBenefitId" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private PagedResponse<EmployeeBenefitDto>? employeeBenefits;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            employeeBenefits = await BenefitsService.GetEmployeeBenefitsAsync(1, 1, 10);
        }
        finally
        {
            isLoading = false;
        }
    }
}
