@page "/leave/leave-types"
@using HRManagement.Models.DTOs
@using HRManagement.Services.Interfaces
@inject ILeaveService LeaveService
@inject NavigationManager NavigationManager

<PageTitle>Leave Types</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Leave Types</h2>
        </div>
        <div class="col-md-4 text-end">
            <a href="/leave/leave-type-create" class="btn btn-primary">
                <span class="oi oi-plus"></span> New Leave Type
            </a>
        </div>
    </div>

    @if (loading)
    {
        <div class="alert alert-info">Loading leave types...</div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @error
        </div>
    }
    else if (leaveTypes != null && leaveTypes.Items.Any())
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Leave Type</th>
                            <th>Default Days/Year</th>
                            <th>Carry Over Allowed</th>
                            <th>Requires Approval</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var leaveType in leaveTypes.Items)
                        {
                            <tr>
                                <td><strong>@leaveType.LeaveTypeName</strong></td>
                                <td>@leaveType.DefaultDaysPerYear days</td>
                                <td>
                                    <span class="badge @(leaveType.IsCarryOverAllowed ? "bg-success" : "bg-secondary")">
                                        @(leaveType.IsCarryOverAllowed ? "Yes" : "No")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(leaveType.RequiresApproval ? "bg-warning" : "bg-info")">
                                        @(leaveType.RequiresApproval ? "Yes" : "No")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(leaveType.IsActive ? "bg-success" : "bg-danger")">
                                        @(leaveType.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <a href="/leave/leave-type-edit/@leaveType.LeaveTypeId" class="btn btn-sm btn-warning">
                                        <span class="oi oi-pencil"></span>
                                    </a>
                                    <button @onclick="() => DeleteLeaveType(leaveType.LeaveTypeId)" class="btn btn-sm btn-danger">
                                        <span class="oi oi-trash"></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (leaveTypes.TotalCount > pageSize)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination mt-3">
                    @for (int i = 1; i <= (leaveTypes.TotalCount + pageSize - 1) / pageSize; i++)
                    {
                        <li class="page-item @(currentPage == i ? "active" : "")">
                            <button class="page-link" @onclick="() => LoadPage(i)">@i</button>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-warning">No leave types found.</div>
    }
</div>

@code {
    private PagedResponse<LeaveTypeDto>? leaveTypes;
    private bool loading = true;
    private string? error;
    private int currentPage = 1;
    private int pageSize = 10;

    protected override async Task OnInitializedAsync()
    {
        await LoadPage(1);
    }

    private async Task LoadPage(int pageNumber)
    {
        try
        {
            loading = true;
            error = null;
            currentPage = pageNumber;
            leaveTypes = await LeaveService.GetAllLeaveTypesAsync(1, pageNumber, pageSize); // Using organization ID = 1
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private async Task DeleteLeaveType(long leaveTypeId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this leave type?"))
        {
            try
            {
                await LeaveService.DeleteLeaveTypeAsync(leaveTypeId);
                await LoadPage(currentPage);
            }
            catch (Exception ex)
            {
                error = ex.Message;
            }
        }
    }

    [Inject]
    private IJSRuntime? JSRuntime { get; set; }
}
