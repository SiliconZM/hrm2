@page "/leave/leave-balances"
@using HRManagement.Models.DTOs
@using HRManagement.Services.Interfaces
@inject ILeaveService LeaveService
@inject NavigationManager NavigationManager

<PageTitle>Leave Balances</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Leave Balances</h2>
        </div>
        <div class="col-md-4 text-end">
            <a href="/leave/leave-balance-create" class="btn btn-primary">
                <span class="oi oi-plus"></span> New Balance
            </a>
        </div>
    </div>

    @if (loading)
    {
        <div class="alert alert-info">Loading leave balances...</div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @error
        </div>
    }
    else if (leaveBalances != null && leaveBalances.Items.Any())
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Leave Type</th>
                            <th>Financial Year</th>
                            <th>Total Days</th>
                            <th>Used Days</th>
                            <th>Available Days</th>
                            <th>Carry Over</th>
                            <th>Last Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var balance in leaveBalances.Items)
                        {
                            <tr>
                                <td><strong>@balance.EmployeeName</strong></td>
                                <td>@balance.LeaveTypeName</td>
                                <td>@balance.FinancialYear</td>
                                <td>@balance.TotalDays.ToString("0.0")</td>
                                <td>@balance.UsedDays.ToString("0.0")</td>
                                <td>
                                    <span class="badge @(balance.AvailableDays > 0 ? "bg-success" : "bg-danger")">
                                        @balance.AvailableDays.ToString("0.0")
                                    </span>
                                </td>
                                <td>@balance.CarryOverDays.ToString("0.0")</td>
                                <td>@balance.UpdatedAt.ToShortDateString()</td>
                                <td>
                                    <a href="/leave/leave-balance-edit/@balance.LeaveBalanceId" class="btn btn-sm btn-warning">
                                        <span class="oi oi-pencil"></span>
                                    </a>
                                    <button @onclick="() => DeleteLeaveBalance(balance.LeaveBalanceId)" class="btn btn-sm btn-danger">
                                        <span class="oi oi-trash"></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (leaveBalances.TotalCount > pageSize)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination mt-3">
                    @for (int i = 1; i <= (leaveBalances.TotalCount + pageSize - 1) / pageSize; i++)
                    {
                        <li class="page-item @(currentPage == i ? "active" : "")">
                            <button class="page-link" @onclick="() => LoadPage(i)">@i</button>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-warning">No leave balances found.</div>
    }
</div>

@code {
    private PagedResponse<LeaveBalanceDto>? leaveBalances;
    private bool loading = true;
    private string? error;
    private int currentPage = 1;
    private int pageSize = 10;

    protected override async Task OnInitializedAsync()
    {
        await LoadPage(1);
    }

    private async Task LoadPage(int pageNumber)
    {
        try
        {
            loading = true;
            error = null;
            currentPage = pageNumber;
            leaveBalances = await LeaveService.GetAllLeaveBalancesAsync(1, pageNumber, pageSize);
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private async Task DeleteLeaveBalance(long leaveBalanceId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this leave balance?"))
        {
            try
            {
                // Note: This is typically not recommended in production, but provided for completeness
                error = "Delete functionality is not recommended for leave balances. Please use admin interface to reset.";
            }
            catch (Exception ex)
            {
                error = ex.Message;
            }
        }
    }

    [Inject]
    private IJSRuntime? JSRuntime { get; set; }
}
