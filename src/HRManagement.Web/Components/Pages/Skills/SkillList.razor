@page "/skills/skills-list"
@using HRManagement.Models.DTOs
@using HRManagement.Services.Interfaces
@inject ISkillsService SkillsService
@inject NavigationManager NavigationManager

<PageTitle>Skills Inventory</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Skills Inventory</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="/skills/skills-create" class="btn btn-primary">
                <span class="oi oi-plus"></span> Add Skill
            </a>
        </div>
    </div>

    @if (loading)
    {
        <div class="alert alert-info">Loading skills...</div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @error
        </div>
    }
    else if (skills != null && skills.Items.Any())
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Skill Name</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var skill in skills.Items)
                        {
                            <tr>
                                <td><strong>@skill.SkillName</strong></td>
                                <td>
                                    <span class="badge bg-secondary">@(skill.Category ?? "Uncategorized")</span>
                                </td>
                                <td>@(skill.Description ?? "No description")</td>
                                <td>
                                    <span class="badge" style="background-color: @(skill.IsActive ? "#28a745" : "#6c757d")">
                                        @(skill.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td><small>@skill.CreatedAt.ToShortDateString()</small></td>
                                <td>
                                    <a href="/skills/skills/@skill.SkillId" class="btn btn-sm btn-info">View</a>
                                    <a href="/skills/skills-edit/@skill.SkillId" class="btn btn-sm btn-warning">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination">
                        @if (skills.HasPreviousPage)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="() => LoadPage(skills.PageNumber - 1)">
                                    Previous
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Previous</span>
                            </li>
                        }

                        <li class="page-item">
                            <span class="page-link">Page @skills.PageNumber of @skills.TotalPages</span>
                        </li>

                        @if (skills.HasNextPage)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="() => LoadPage(skills.PageNumber + 1)">
                                    Next
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Next</span>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No skills found.</div>
    }
</div>

@code {
    private PagedResponse<SkillDto>? skills;
    private bool loading = true;
    private string? error;
    private const long OrganizationId = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadPage(1);
    }

    private async Task LoadPage(int pageNumber)
    {
        try
        {
            loading = true;
            error = null;
            skills = await SkillsService.GetAllSkillsAsync(OrganizationId, pageNumber, 10);
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }
}
