@page "/recruitment/candidates"
@using HRManagement.Models.DTOs
@using HRManagement.Services.Interfaces
@inject IRecruitmentService RecruitmentService
@inject NavigationManager NavigationManager

<PageTitle>Candidates</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Job Candidates</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="/recruitment/candidates/create" class="btn btn-primary">
                <span class="oi oi-plus"></span> Add Candidate
            </a>
        </div>
    </div>

    @if (loading)
    {
        <div class="alert alert-info">Loading candidates...</div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @error
        </div>
    }
    else if (candidates != null && candidates.Items.Any())
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Experience</th>
                            <th>Current Company</th>
                            <th>Source</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var candidate in candidates.Items)
                        {
                            <tr>
                                <td><strong>@candidate.FullName</strong></td>
                                <td><a href="mailto:@candidate.Email">@candidate.Email</a></td>
                                <td>@(candidate.PhonePrimary ?? "N/A")</td>
                                <td>
                                    @if (candidate.ExperienceYears.HasValue)
                                    {
                                        <span>@candidate.ExperienceYears years</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not specified</span>
                                    }
                                </td>
                                <td>@(candidate.CurrentCompany ?? "N/A")</td>
                                <td>
                                    <span class="badge bg-info">@(candidate.Source ?? "N/A")</span>
                                </td>
                                <td>
                                    <a href="/recruitment/candidates/@candidate.CandidateId" class="btn btn-sm btn-info">View</a>
                                    <a href="/recruitment/candidates/edit/@candidate.CandidateId" class="btn btn-sm btn-warning">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination">
                        @if (candidates.HasPreviousPage)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="() => LoadPage(candidates.PageNumber - 1)">
                                    Previous
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Previous</span>
                            </li>
                        }

                        <li class="page-item">
                            <span class="page-link">Page @candidates.PageNumber of @candidates.TotalPages</span>
                        </li>

                        @if (candidates.HasNextPage)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="() => LoadPage(candidates.PageNumber + 1)">
                                    Next
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Next</span>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No candidates found.</div>
    }
</div>

@code {
    private PagedResponse<CandidateDto>? candidates;
    private bool loading = true;
    private string? error;
    private const long OrganizationId = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadPage(1);
    }

    private async Task LoadPage(int pageNumber)
    {
        try
        {
            loading = true;
            error = null;
            candidates = await RecruitmentService.GetAllCandidatesAsync(OrganizationId, pageNumber, 10);
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }
}
