@page "/recruitment/job-postings"
@using HRManagement.Models.DTOs
@using HRManagement.Services.Interfaces
@inject IRecruitmentService RecruitmentService
@inject NavigationManager NavigationManager

<PageTitle>Job Postings</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Job Postings</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="/recruitment/job-postings/create" class="btn btn-primary">
                <span class="oi oi-plus"></span> New Job Posting
            </a>
        </div>
    </div>

    @if (loading)
    {
        <div class="alert alert-info">Loading job postings...</div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @error
        </div>
    }
    else if (jobPostings != null && jobPostings.Items.Any())
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Job Title</th>
                            <th>Department</th>
                            <th>Openings</th>
                            <th>Salary Range</th>
                            <th>Status</th>
                            <th>Posted</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var posting in jobPostings.Items)
                        {
                            <tr>
                                <td><strong>@posting.Description</strong></td>
                                <td>@posting.DepartmentName</td>
                                <td>@posting.NumberOfOpenings</td>
                                <td>
                                    @if (posting.SalaryRangeMin.HasValue || posting.SalaryRangeMax.HasValue)
                                    {
                                        <span>@posting.SalaryRangeMin?.ToString("C0") - @posting.SalaryRangeMax?.ToString("C0")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not specified</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge" style="background-color: @GetStatusColor(posting.Status)">
                                        @posting.Status
                                    </span>
                                </td>
                                <td>@posting.PostedDate.ToShortDateString()</td>
                                <td>
                                    <a href="/recruitment/job-postings/@posting.JobPostingId" class="btn btn-sm btn-info">View</a>
                                    <a href="/recruitment/job-postings/edit/@posting.JobPostingId" class="btn btn-sm btn-warning">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination">
                        @if (jobPostings.HasPreviousPage)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="() => LoadPage(jobPostings.PageNumber - 1)">
                                    Previous
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Previous</span>
                            </li>
                        }

                        @for (int i = 1; i <= jobPostings.TotalPages; i++)
                        {
                            if (i == jobPostings.PageNumber)
                            {
                                <li class="page-item active">
                                    <span class="page-link">@i</span>
                                </li>
                            }
                            else if (i <= 5 || (i > jobPostings.PageNumber - 3 && i < jobPostings.PageNumber + 3) || i > jobPostings.TotalPages - 2)
                            {
                                <li class="page-item">
                                    <button class="page-link" @onclick="() => LoadPage(i)">@i</button>
                                </li>
                            }
                        }

                        @if (jobPostings.HasNextPage)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="() => LoadPage(jobPostings.PageNumber + 1)">
                                    Next
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Next</span>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No job postings found.</div>
    }
</div>

@code {
    private PagedResponse<JobPostingDto>? jobPostings;
    private bool loading = true;
    private string? error;
    private int currentPage = 1;
    private const long OrganizationId = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadPage(1);
    }

    private async Task LoadPage(int pageNumber)
    {
        try
        {
            loading = true;
            error = null;
            jobPostings = await RecruitmentService.GetAllJobPostingsAsync(OrganizationId, pageNumber, 10);
            currentPage = pageNumber;
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private string GetStatusColor(string status) => status switch
    {
        "Open" => "#28a745",
        "Closed" => "#6c757d",
        "Draft" => "#ffc107",
        "On Hold" => "#fd7e14",
        _ => "#17a2b8"
    };
}
