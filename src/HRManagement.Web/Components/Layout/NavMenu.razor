@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">HR Management System</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>

        <hr class="d-md-none" />

        <!-- Employee Management -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="employees" Match="NavLinkMatch.Prefix">
                <span class="bi bi-people-fill" aria-hidden="true"></span> Employees
            </NavLink>
        </div>

        <!-- Recruitment Management -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="recruitment/job-postings" Match="NavLinkMatch.Prefix">
                <span class="bi bi-briefcase-fill" aria-hidden="true"></span> Recruitment
            </NavLink>
        </div>
        <div class="nav-item px-3 ms-4">
            <NavLink class="nav-link" href="recruitment/job-postings">
                <span class="bi bi-file-earmark-text" aria-hidden="true"></span> Job Postings
            </NavLink>
        </div>
        <div class="nav-item px-3 ms-4">
            <NavLink class="nav-link" href="recruitment/candidates">
                <span class="bi bi-person-check" aria-hidden="true"></span> Candidates
            </NavLink>
        </div>

        <!-- Performance Management -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="performance/evaluations" Match="NavLinkMatch.Prefix">
                <span class="bi bi-bar-chart-fill" aria-hidden="true"></span> Performance
            </NavLink>
        </div>
        <div class="nav-item px-3 ms-4">
            <NavLink class="nav-link" href="performance/evaluations">
                <span class="bi bi-clipboard-check" aria-hidden="true"></span> Evaluations
            </NavLink>
        </div>
        <div class="nav-item px-3 ms-4">
            <NavLink class="nav-link" href="performance/goals">
                <span class="bi bi-target" aria-hidden="true"></span> Goals
            </NavLink>
        </div>

        <!-- Skills Management -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="skills/skills-list" Match="NavLinkMatch.Prefix">
                <span class="bi bi-lightning-charge-fill" aria-hidden="true"></span> Skills
            </NavLink>
        </div>

        <!-- Contracts Management -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="contracts/contracts-list" Match="NavLinkMatch.Prefix">
                <span class="bi bi-file-contract" aria-hidden="true"></span> Contracts
            </NavLink>
        </div>

        <!-- Leave Management -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="leave/leave-requests" Match="NavLinkMatch.Prefix">
                <span class="bi bi-calendar-check-fill" aria-hidden="true"></span> Leave Management
            </NavLink>
        </div>
        <div class="nav-item px-3 ms-4">
            <NavLink class="nav-link" href="leave/leave-types">
                <span class="bi bi-tags-fill" aria-hidden="true"></span> Leave Types
            </NavLink>
        </div>
        <div class="nav-item px-3 ms-4">
            <NavLink class="nav-link" href="leave/leave-requests">
                <span class="bi bi-calendar-event" aria-hidden="true"></span> Leave Requests
            </NavLink>
        </div>
        <div class="nav-item px-3 ms-4">
            <NavLink class="nav-link" href="leave/leave-balances">
                <span class="bi bi-calculator" aria-hidden="true"></span> Leave Balances
            </NavLink>
        </div>

        <!-- Payroll & Compensation -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="payroll/salary-structures" Match="NavLinkMatch.Prefix">
                <span class="bi bi-cash-coin" aria-hidden="true"></span> Payroll & Compensation
            </NavLink>
        </div>
        <div class="nav-item px-3 ms-4">
            <NavLink class="nav-link" href="payroll/salary-structures">
                <span class="bi bi-diagram-3" aria-hidden="true"></span> Salary Structures
            </NavLink>
        </div>
        <div class="nav-item px-3 ms-4">
            <NavLink class="nav-link" href="payroll/employee-salaries">
                <span class="bi bi-person-badge" aria-hidden="true"></span> Employee Salaries
            </NavLink>
        </div>
        <div class="nav-item px-3 ms-4">
            <NavLink class="nav-link" href="payroll/payroll-runs">
                <span class="bi bi-list-check" aria-hidden="true"></span> Payroll Runs
            </NavLink>
        </div>
        <div class="nav-item px-3 ms-4">
            <NavLink class="nav-link" href="payroll/salary-slips">
                <span class="bi bi-receipt" aria-hidden="true"></span> Salary Slips
            </NavLink>
        </div>

        <!-- Benefits Management -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="benefits/benefit-types" Match="NavLinkMatch.Prefix">
                <span class="bi bi-heart-pulse" aria-hidden="true"></span> Benefits Management
            </NavLink>
        </div>
        <div class="nav-item px-3 ms-4">
            <NavLink class="nav-link" href="benefits/benefit-types">
                <span class="bi bi-tags" aria-hidden="true"></span> Benefit Types
            </NavLink>
        </div>
        <div class="nav-item px-3 ms-4">
            <NavLink class="nav-link" href="benefits/benefit-plans">
                <span class="bi bi-bookmark-check" aria-hidden="true"></span> Benefit Plans
            </NavLink>
        </div>
        <div class="nav-item px-3 ms-4">
            <NavLink class="nav-link" href="benefits/employee-benefits">
                <span class="bi bi-person-check" aria-hidden="true"></span> Employee Benefits
            </NavLink>
        </div>

        <hr class="d-md-none" />

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @context.User.Identity?.Name
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link">
                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Register">
                        <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

